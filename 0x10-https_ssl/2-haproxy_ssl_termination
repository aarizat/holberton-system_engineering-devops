global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy
    tune.ssl.default-dh-param 2048

    # Defaults SSL material locations
    ca-base /etc/ssl/certs
    crt-base /etc/ssl/private

frontend
    bind *:80
    bind *:443 ssl crt  /etc/ssl/ariza.tech/ariza.tech.pem
    mode http
    default_backend web-backend

backend web-backend
    balance roundrobin
    mode http
    server web-01 35.229.34.27 check
    server web-02 35.237.166.174 check

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull

listen hbnb
    bind 0.0.0.0:80
    mode http
    stats enable
    stats uri /haproxy?stats
    option httpclose
    option forwardfor
